# Continuum Backend Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# K2 Think V2 API Configuration
# =============================================================================
# Required for K2 verification features
# Get your API key from: https://k2think.anthropic.com
K2_API_KEY=your_k2_api_key_here

# K2 API settings
K2_TIMEOUT=30                # Timeout for K2 API calls (seconds)
K2_MAX_RETRIES=2             # Number of retry attempts for failed K2 calls

# =============================================================================
# Escalation Configuration
# =============================================================================
# Cumulative drift threshold for K2 escalation
CUMULATIVE_DRIFT_THRESHOLD=2.0

# Heuristic similarity threshold for topic matching (0.0 - 1.0)
HEURISTIC_SIMILARITY_THRESHOLD=0.7

# Drift decay factor (0.0 - 1.0, higher = slower decay)
DRIFT_DECAY_FACTOR=0.9

# Number of stable turns before drift decay activates
STABILITY_THRESHOLD_TURNS=3

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS Configuration
# For production, restrict to your extension ID
# ALLOWED_ORIGINS=chrome-extension://your-extension-id

# =============================================================================
# Development Settings
# =============================================================================
# Set to "development" for debug logging, "production" for normal operation
ENVIRONMENT=development

# Enable detailed logging for debugging
DEBUG_MODE=false

# =============================================================================
# Security Notes
# =============================================================================
# NEVER commit .env file with real API keys to version control!
# Keep your .env file local and secure.
# Use environment-specific secrets management for production deployments.
